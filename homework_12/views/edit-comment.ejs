<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>

  <body>
    <%- include("./partials/nav.ejs") %>
    <h3>Comment ma'lumotlarini tahrirlash:</h3>

    <form
      action="/edit-comment/<%= comment.id %>?_method=PUT"
      method="post"
      id="post-form"
    >
      <label for="name">Name</label>
      <input
        type="text"
        name="name"
        id="name"
        value="<%= comment.name %>"
      /><br /><br />

      <label for="email">Email</label>
      <input
        type="email"
        name="email"
        id="email"
        value="<%= comment.email %>"
      /><br /><br />

      <label for="body">Body</label>
      <input
        type="text"
        name="body"
        id="body"
        value="<%= comment.body %>"
      /><br /><br />

      <button type="submit">Saqlash</button>
    </form>
  </body>
</html>
